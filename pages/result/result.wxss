/* abnormal.wxss */
 @import "../../component/footer/footer.wxss"; 
page{
  width: 100%;
  height: 100%;
  background: #f8f8f8;
  font-family: "宋体";
}
.container{
  border-top: 1px solid #e8e8e8;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}
.state-wrap{
  padding: 106rpx 0 0;   
  text-align: center;
  height: 40%;
  box-sizing: border-box;  
}
.notyet-icon{
  width: 88rpx;
  height: 88rpx;
  margin: 0 auto 34rpx;
}
.notyet-icon image{
  width: 100%;
  height: 100%;
  display: block;
}
.state{
  font-size: 30rpx;
  color: #333;
  font-weight: 600;
}
.state-time{
  font-size: 24rpx;
  color: #999;
  margin-top:18rpx;
}
.content-wrap{
  width: 710rpx;
  height: 50%;
  margin: 0 auto;
  background: #Fff;
  border-radius: 6rpx;
  margin-bottom: 30rpx;
  box-sizing: border-box;
  padding:20rpx 60rpx 0;

}
.icon-wrap image{
  width: 60rpx;
  height: 60rpx;
  display: block;
  margin: 0 auto;
}
.icon-wrap{
  display: flex;
  width: 100%;
  margin-bottom: 10rpx;
}
.time-icon{
  width: 50%;
  box-sizing: border-box;
  padding-right: 40rpx;
}
.ip-icon{
  width: 30%;
}
.state-icon{
  width: 20%;
  box-sizing: border-box;
  padding-left: 66rpx;
}
.time-title,.ip-title,.state-title{
  text-align: center;
  color: #333;
  font-size: 24rpx;
  font-weight: 600;
  line-height: 50rpx;
}
.content-item{
  width: 100%;
  display: flex;
  font-size: 24rpx;
  color: #9a9a9a;
  border-bottom: 1px solid #DEDEDE;
  box-sizing: border-box;
  text-align: center;
  line-height: 60rpx;
  overflow: hidden;
  word-break: normal;
  word-wrap: break-word;
}
.content-item:last-child{
  border-bottom: none;
}
.content-item:first-child{
  border-bottom: 1px solid #DEDEDE;
}
.time-text{
  width: 50%;
  text-align: left;
}
.ip-text{
  width: 35%;
}
.state-text{
  width: 15%;
  text-align: right;
}
.blank{
  width: 400rpx;
  height: 400rpx;
  margin: 0 auto;
}
.blank image{
  display: block;
  width: 100%;
  height: 100%;
}
