@import "../../component/footer/footer.wxss";

page{
  width: 100%;
  height: 100%;
  background: #f8f8f8;
  font-family: "微软雅黑";
  box-sizing: border-box;
}
.container{
  width: 100%;
  height: auto;
  box-sizing: border-box;  
  color: #999;
  padding: 20rpx 40rpx;
}
.qrcode{
  width: 300rpx;
  height: 300rpx;
  margin: 80rpx auto;
}
.qrcode image{
  display: block;
  width: 100%;
  height: 100%;
}
.info{
  width: 80%;
  color: #999;
  font-size: 30rpx;
  line-height: 72rpx;
  margin: 0 auto;
}
.item{
  width: 100%;
  display: flex;
}
.icon{
  width: 46rpx;
  height: 46rpx;
  margin-top: 13rpx;
}
.icon image{
  display: block;
  width: 100%;
  height: 100%;
}
.text{
  flex: 1;
  margin-left: 30rpx;
}
