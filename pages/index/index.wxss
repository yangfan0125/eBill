/**index.wxss**/
page{
  width: 100%;
  height: 100%;
  background: #f8f8f8;
  font-family: "微软雅黑";
}
.container{
  width: 100%;
  height: auto;
}
.banner{
  color: #fff;
  width: 100%;
  height: 380rpx;
  background: url('http://r.photo.store.qq.com/psb?/V147B5Eb1G2hHv/jAetUZvzHtkDRDM0dquX7IXy.Xom9.6uCAb2iivxj.k!/r/dPMAAAAAAAAA') no-repeat;
  background-size: 100% 380rpx;
  padding: 90rpx 0 0 44rpx;
  box-sizing: border-box;  
}
.banner-text1,.banner-text2{
  font-size: 34rpx;
  font-weight: bold;
  line-height: 60rpx;
}
.scan-btn{
  width: 200rpx;
  line-height: 50rpx;
  font-size: 34rpx;
  font-weight: bold;
  border:1px solid rgba(255, 255, 255, .7);
  border-radius: 30rpx;
  background: rgba(255, 255, 255, .2);
  margin-top: 30rpx;
  text-align: center;
  box-sizing: border-box;
  padding: 6rpx 0;
}
.banner-text3{
  font-size: 24rpx;
  line-height: 70rpx;
}
.content{
  margin-top: 40rpx;
}
.item{
  height: 120rpx;
  width: 100%;
  margin-bottom: 30rpx;
  background: #fff;
  color: #333;
  font-size: 32rpx;
  padding: 15rpx 20rpx; 
  box-sizing: border-box;  
  line-height: 90rpx;
  display: flex;
  border: 1px solid #ededed;
}
.item-icon{
  width: 90rpx;
  height: 90rpx;
  margin-right: 18rpx;
}
.arrow-icon{
  width: 24rpx;
  height: 24rpx;
  margin-top: 33rpx;
}
.item-text{
  flex: 1;
}