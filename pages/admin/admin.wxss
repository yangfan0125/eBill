page{
  width: 100%;
  height: 100%;
  background: #f8f8f8;
  font-family: "微软雅黑";
  box-sizing: border-box;
}
.container{
  width: 100%;
  height: auto;
  box-sizing: border-box;  
}
.top{
  width: 100%;
  height: auto;
  background: #0071d9;
  display: flex;
  box-sizing: border-box;
  padding: 50rpx 40rpx;
  align-items:center;
  
}
.top-left{
  width: 120rpx;
  height: 120rpx;
  background: #fff;
  border-radius: 50%;
  border: 2px solid #dedede;  
}
.top-left image{
  display: block;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  
}
.top-right-wrap{
  flex: 1;
  display: flex;
  width: 100%;
  height: auto;
  align-items:center;
  
}
.top-center{
  flex: 1;
  margin-left: 30rpx;
  font-size: 34rpx;
  color: #fff;
  
}
.login-wrap{
  width: 100%;
  display: flex;
}
.login-text{
  font-size: 34rpx;
  flex: 1;
}
.top-right{
  width: 40rpx;
  height: 40rpx;
}
.top-right image{
  display: block;
  width: 100%;
  height: 100%;
}
.tip{
  font-size: 24rpx;
  margin-top: 20rpx;
}
.about-wrap{
  width: 100%;
  height: 100rpx;
  margin-top: 40rpx;
  background: #fff;
  display: flex;
  box-sizing: border-box;
  padding: 20rpx 40rpx;
  align-items: center;  
}
.about-icon{
  width: 40rpx;
  height: 40rpx;
}
.about-text{
  font-size: 32rpx;
  color: #999;
  flex: 1;
  margin-left: 20rpx;
  line-height: 60rpx;
}
.logout{
  width: 710rpx;
  height: 100rpx;
  background: #0071d9;
  text-align: center;
  line-height: 100rpx;
  font-size: 32rpx;
  color: #fff;
  margin: 250rpx auto 0;
  border-radius: 10rpx;
}
.arrow-icon{
  width: 24rpx;
  height: 24rpx;
}