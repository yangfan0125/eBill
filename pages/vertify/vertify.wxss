/* vertify.wxss */
@import '../../component/toast/toast.wxss';
@import "../../component/footer/footer.wxss";

page{
  width: 100%;
  height: 100%;
  background: #f8f8f8;
  font-family: "微软雅黑";
  box-sizing: border-box;
}
.container{
  padding-top: 40rpx;
  border-top: 1px solid #e8e8e8;
  width: 100%;
  height: auto;
}
.form-item{
  width: 100%;
  height: 100rpx;
  border-top: 1px solid #dedede;
  background: #fff;
  display: flex;
  line-height: 100rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  padding-left: 20rpx;
}

.form-item input{
  flex: 1;
  height: 100rpx;
}
.form-item-place{
  color: #999;
}

.upload{
  width: 100%;
  margin-top: 60rpx;
}
.upload image{
  display: block;
  width: 140rpx;
  height: 140rpx;
  margin: 0 auto;
}

.file-btn{
  margin: 50rpx auto;  
  width: 710rpx;
  height: 80rpx;
  color: #fff;
  border-radius: 10rpx;
  text-align: center;
  background:  #0071d9;
  line-height: 80rpx;
  font-size: 36rpx;
}
.file-btn button{
  background:#0071d9;
  color:#FFF;
}
.ebillUrl-wrap{
  border-bottom: 1px solid #dedede;  
}
.url-tip{
  margin: 0 auto;  
  height: 60rpx;
  color: #333;
  text-align: left;
  font-size: 26rpx;
  line-height: 60rpx;
  padding-left: 20rpx;
  box-sizing: border-box;  
}