/* ticket.wxss */
page{
  width: 100%;
  height: 100%;
  background: #2E7FE5;
  font-family: "微软雅黑";
  padding: 32rpx 20rpx;
  box-sizing: border-box;
}
.container{
  width: 100%;
  height: auto;
  border-radius: 6rpx;
  background: #fff;
  padding: 40rpx 0 0;
  box-sizing: border-box;
  
}
.title{
  width: 100%;
  height: 88rpx;
  background: url('http://r.photo.store.qq.com/psb?/V147B5Eb1G2hHv/UIaPyXDA5MJTy7KtMVjXdtRdNPDZ8EUsQRGcKuboEcQ!/r/dPMAAAAAAAAA') center center no-repeat;
  background-size: 134rpx 88rpx;
  color: #A90000;
  font-size: 36rpx;
  text-align: center;
  line-height: 88rpx;
  margin-bottom: 30rpx;
  padding: 0 40rpx;
  box-sizing: border-box;
  
}
.info-top{
  padding: 0 40rpx;  
  width: 100%;
  height: auto;
  box-sizing: border-box;
}
.info-wrap{
  width: 100%;
  display: flex;  
  margin-bottom: 10rpx;
}
.info-item{
  height: auto;
  font-size: 28rpx;  
  width: 50%;
}
.info-item-right{
  margin-left: 3%;
  width: 47%;
}
.item-title{
  color: #999;
}
.item-content{
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.middle{
  height: 34rpx;
  width: 100%;
  display: flex;
}
.line{
  flex: 1;
  height: 0;
  border-bottom: 1px dashed #d9d9d9;
  margin-top: 17rpx;
  position: relative;
}
.line::before{
  content: "";
  display: block;
  border-radius: 50%;
  width: 34rpx;
  height: 34rpx;
  background: #2E7FE5;
  position: absolute;
  left: -17rpx;
  top: -17rpx;
}
.line::after{
  content: "";
  display: block;
  border-radius: 50%;
  width: 34rpx;
  height: 34rpx;
  background: #2E7FE5;
  position: absolute;
  right: -17rpx;
  top: -17rpx;
}
.info-wrap-last{
  margin-bottom: 16rpx;
}
.info-wrap-first{
  margin-top: 8px;
}
.bill-examine-btn{
  width: 670rpx;
  height: 94rpx;
  background: #EF4939;
  font-size: 30rpx;
  text-align: center;
  line-height: 94rpx;
  color: #fff;
  border-radius: 6rpx;
  margin: 106rpx auto 40rpx;  
}
.bill-examine-hover{
  opacity: .8;
}
.operator{
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  box-sizing: border-box;
  border-top: 1px solid #d9d9d9;
  display: flex;
}
.operator:active{
  opacity: .8;
  background: #ccc;
}
.arrow-icon{  
  width: 24rpx;
  height: 24rpx;
  margin: 34rpx 36rpx 0 6rpx;
}
.operator-text{
  font-size: 28rpx;
  color: #333;
  margin-left: 32rpx;
}
.operator-info{
  font-size: 28rpx;
  color: #999;
  flex: 1;
  text-align: right;
}
